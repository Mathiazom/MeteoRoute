<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/request_permission_gps_location_exit_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:tint="@color/colorWhite"
        android:src="@drawable/ic_exit"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/request_permission_gps_location_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APP PERMISSION:"
        android:textColor="@color/colorWhite"
        android:layout_marginStart="30dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/request_permission_gps_location_exit_button"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/request_permission_gps_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="55sp"
        android:textStyle="bold"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/request_permission_gps_location_sub_title"
        android:text="Your point of view"/>

    <ImageView
        android:id="@+id/request_permission_gps_location_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/ic_gps_fixed_black_100dp"
        android:tint="@color/colorWhite"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/request_permission_gps_location_title"/>

    <TextView
        android:id="@+id/request_permission_gps_location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:paddingEnd="40dp"
        android:paddingStart="40dp"
        android:paddingTop="10dp"
        android:text="MeteoRoute uses your location to find the best path to your destination as well as request the correct weather forecast."
        android:textColor="@color/colorWhiteAccent"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/request_permission_gps_location_img" />

    <Button
        android:id="@+id/request_permission_gps_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/primary_dark_rounded"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:text="GIVE PERMISSION"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/request_permission_gps_location_text" />

</android.support.constraint.ConstraintLayout>